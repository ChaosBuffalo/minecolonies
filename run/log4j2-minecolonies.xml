<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60" status="info">
	<Appenders>

		<Console name="MINECOLONIES_STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="MINECOLONIES_STDOUT %-5p [%t %d] (%F:%L) %c{2}: %m%n" />
		</Console>

        <RollingRandomAccessFile name="MINECOLONIES_FILE" fileName="logs/minecolonies.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level]: %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <OnStartupTriggeringPolicy />
            </Policies>
        </RollingRandomAccessFile>

	</Appenders>

	<Loggers>

		<Logger level="debug" name="minecolonies" additivity="false">
			<AppenderRef ref="MINECOLONIES_FILE" />
		</Logger>

		<Root level="debug">
			<AppenderRef ref="MINECOLONIES_STDOUT" />
		</Root>
		
	</Loggers>

</Configuration>
